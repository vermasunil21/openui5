			<layout:HorizontalLayout>
				<Image src="./test-resources/sap/uxap/demokit/sample/Headers/Control/Twitter.png"
					   width="21px"/>
				<Text text="@DeniseSmith"/>
			</layout:HorizontalLayout>
		</layout:VerticalLayout>

		<core:Title text="Adresses"/>
