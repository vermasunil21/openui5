<core:View controllerName="sap.m.sample.GenericTileStates.Page"
	xmlns="sap.m" xmlns:core="sap.ui.core">
	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Cumulative Totals"
		subheader="Expenses" frameType="OneByOne" state="Loading">
		<tileContent>
			<TileContent footer="Current Quarter" unit="EUR">
				<content>
					<NumericContent scale="M" value="1.96"
						valueColor="Error" indicator="Down" />
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>
	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Comparative Annual Totals"
		subheader="Expenses By Region" frameType="TwoByOne" state="Failed">
		<tileContent>
			<TileContent footer="Actual and Target" unit="EUR">
				<content>
					<FeedContent
						contentText="@@notify Great outcome of the Presentation today. The new functionality and the design was well received. Berlin, Tokyo, Rome, Budapest, New York, Munich, London"
						subheader="about 1 minute ago in Computer Market" value="9">
					</FeedContent>
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>
	<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
		<tiles>
			<GenericTile
				backgroundImage="test-resources/sap/m/demokit/sample/GenericTileAsFeedTile/images/NewsImage1.png"
				frameType="TwoByOne" state="Loading">
				<tileContent>
					<TileContent footer="August 21, 2013">
						<content>
							<NewsContent
								contentText="Wind Map: Monitoring Real-Time and Fore-casted Wind Conditions over the Globe"
								subheader="Today, SAP News">
							</NewsContent>
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
			<GenericTile
				backgroundImage="test-resources/sap/m/demokit/sample/GenericTileAsFeedTile/images/NewsImage2.png"
				frameType="TwoByOne" state="Loaded">
				<tileContent>
					<TileContent footer="August 21, 2013">
						<content>
							<NewsContent
								contentText="Wind Map: Monitoring Real-Time and Fore-casted Wind Conditions over the Globe"
								subheader="Today, SAP News">
							</NewsContent>
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
		</tiles>
	</SlideTile>
	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Cumulative Totals"
		subheader="Expenses" frameType="OneByOne" state="Disabled">
		<tileContent>
			<TileContent footer="Notification Text" unit="EUR">
				<content>
					<NumericContent value="3"
						icon="sap-icon://travel-expense" />
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>
</core:View>
